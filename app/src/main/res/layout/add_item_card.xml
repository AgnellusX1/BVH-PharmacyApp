<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:layout_marginBottom="4dp"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="20dp"
    app:cardElevation="18dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/addItemIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/addCardLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location"
            app:layout_constraintBottom_toTopOf="@id/addCardBillNo"
            app:layout_constraintEnd_toStartOf="@id/checkBox"
            app:layout_constraintHorizontal_bias="0.55"
            app:layout_constraintStart_toEndOf="@id/addItemIcon"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/addCardBillNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bill Number"
            app:layout_constraintBottom_toBottomOf="@id/addItemIcon"
            app:layout_constraintEnd_toStartOf="@id/checkBox"
            app:layout_constraintHorizontal_bias="0.546"
            app:layout_constraintStart_toEndOf="@id/addItemIcon"
            app:layout_constraintTop_toBottomOf="@id/addCardLocation" />

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintBottom_toBottomOf="@id/addItemIcon"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/addItemIcon" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>